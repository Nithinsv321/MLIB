<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Students
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6"> 
                <div id="vieberror"></div> <!--show error   -->
                <form class="form-inline my-2 my-lg-0" id='batch-view'>
                    <select name="batch" id="viewSel" class="form-control">
                        <option value="">Select</option>
                        <% batchs.forEach(function(batch){ %>
                        <option value="<%= batch._id %>"><%= batch.start %> - <%= batch.end %></option>
                        <% }); %>
                    </select>
                   <button class="btn btn-primary my-2 my-sm-0" type="submit" >Show</button> 
                 </form>
                 
            </div>
        </div><br>
        <div style="overflow-x:auto;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Admission No</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Books Taken</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>   
        </div>
    </div>
</div>

 