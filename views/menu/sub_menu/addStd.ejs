<div class="row">
    <div class="col-lg-12 ">
        <h3 class="page-header">
           Add Student 
        </h3>
        <a href="/Student/students"> <button class="btn btn-primary my-2 my-sm-0"> View All Students</button>
        <a href="/Student/AddBatch"> <button class="btn btn-primary my-2 my-sm-0"> Batches</button></a><br><br>
        <%- include ('../../partials/messages') %>
        <form action="/Student/AddStudent" method="POST" id="add-std">
            
            <div id="aserror"></div>
            <div class="form-group">
                <label for="title"> Batch </label>
                <select name="batch" class="form-control" id="selBat">
                    <option value="select"> Select </option>
                    <% batchs.forEach(function(batch){ %>
                        <option value="<%= batch._id %>"> <%= batch.start %> - <%= batch.end %> </option>
                    <% }) %>
                     
                </select>
            </div>
            <div class="form-group">
                <label for="title"> Admission No </label>
                <input type="text" class="form-control" name="admNo" id="adNo">                      
            </div>
            <div class="form-group">
                <label for="title"> Name </label>
                <input type="text" class="form-control" name="name" id="nam">                      
            </div>
            <div class="form-group">
                    <label for="title"> Gender </label>
                    <select name="gender" class="form-control" id="selGen">
                        <option value=""> Select </option>
                        <option value="Male"> Male </option>
                        <option value="Female"> Female </option>
                    </select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary my-2 my-sm-0" type="button" onclick="addStd()" > Add Student </button>                   
            </div>
        </form>
    </div>
</div>
<!-- /.row -->