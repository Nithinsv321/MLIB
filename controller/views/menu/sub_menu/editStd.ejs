<div class="row">
    <div class="col-lg-12 ">
        <h3 class="page-header">
           Edit Student 
        </h3>
        <a href="/Student/students"> <button class="btn btn-primary my-2 my-sm-0"> View All Students</button></a><br>   
        <%- include ('../../partials/messages') %>
        <% if(typeof student != 'undefined'){ %>
        <form action="/Student/EditStudent/<%= student._id %>" method="POST" id="edit-std">
            <div id="editserror"></div>
            <div class="form-group">
            
                <label for="title"> Batchs </label>
                <select name="batch" class="form-control" id="selBat">
                    <option value="select"> Select </option>
                    <% batchs.forEach(function(batch){ %>
                        <option value="<%= batch._id %>"> <%= batch.start %> - <%= batch.end %> </option>
                    <% }) %>
                     
                </select>
            </div>
            <div class="form-group">
                <label for="title"> Admission No </label>
                <input type="text" class="form-control" name="admNo" id="adNo" value="<%= student.admNo %>">                      
            </div>
            <div class="form-group">
                <label for="title"> Name </label>
                <input type="text" class="form-control" name="name" id="nam" value="<%= student.name %>">                      
            </div>
            <div class="form-group">
                    <label for="title"> Gender </label>
                    <select name="gender" class="form-control" id="selGen">
                        <option value="select"> Select </option>
                        <option value="Male"> Male </option>
                        <option value="Female"> Female </option>
                    </select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary my-2 my-sm-0" type="button" onclick="editStd()" > Edit Student </button>                   
            </div>
        </form>

        <% } %>
    </div>
</div>
<!-- /.row -->